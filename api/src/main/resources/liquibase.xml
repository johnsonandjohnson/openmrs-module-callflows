            ALTER TABLE cfl_callflows MODIFY raw LONGTEXT;
        </sql>
    </changeSet>

    <changeSet id="callFlow-2020-01-03-11:00" author="Connect for Life">
        <validCheckSum>3:55d2927a9574d7af884cbd2b5e20b3dd</validCheckSum>
