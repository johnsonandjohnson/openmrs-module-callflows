<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

    <mvc:annotation-driven/>
    <context:annotation-config/>

    <context:component-scan base-package="com.janssen.connectforlife.callflows"/>

    <bean id="callflowsSettings" class="org.motechproject.config.SettingsFacade" autowire="byType">
        <property name="rawConfigFiles">
            <list>
                <value>classpath:callflows-settings.json</value>
            </list>
        </property>
    </bean>

    <bean id="moduleRegistrationData" class="org.motechproject.osgi.web.ModuleRegistrationData">
        <constructor-arg name="moduleName" value="callflows" />
        <constructor-arg name="url" value="../callflows/resources/index.html" />
        <constructor-arg name="angularModules">
            <list>
                <value>callflows</value>
            </list>
        </constructor-arg>
        <constructor-arg name="i18n">
            <map>
                <entry key="messages" value="../callflows/resources/messages/" />
            </map>
        </constructor-arg>
        <property name="defaultURL" value="/designer" />
    </bean>

</beans>
