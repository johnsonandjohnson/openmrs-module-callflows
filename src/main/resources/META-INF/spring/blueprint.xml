<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd
        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.1.xsd">

    <tx:annotation-driven transaction-manager="transactionManager"/>

    <import resource="classpath*:META-INF/motech/*.xml"/>

    <osgi:reference id="transactionManager" interface="org.springframework.transaction.PlatformTransactionManager"/>

    <osgi:service ref="callFlowService"
                  interface="com.janssen.connectforlife.callflows.service.CallFlowService"/>

    <osgi:reference id="callFlowDataService"
                    interface="com.janssen.connectforlife.callflows.repository.CallFlowDataService"/>

    <osgi:service ref="settingsService"
                  interface="com.janssen.connectforlife.callflows.service.SettingsService"/>

    <osgi:service ref="callService"
                  interface="com.janssen.connectforlife.callflows.service.CallService"/>

    <osgi:service ref="flowService"
                  interface="com.janssen.connectforlife.callflows.service.FlowService"/>

    <osgi:reference id="callDataService"
                    interface="com.janssen.connectforlife.callflows.repository.CallDataService"/>

    <osgi:reference id="configServiceRef" interface="org.motechproject.config.service.ConfigurationService"/>

    <osgi:reference id="eventRelay" interface="org.motechproject.event.listener.EventRelay"/>
</beans>
